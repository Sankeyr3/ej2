<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <View
        android:id="@+id/b1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/c1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/teal_200"
        app:layout_constraintTop_toBottomOf="@id/b1"
        app:layout_constraintRight_toLeftOf="@id/b1"/>
    <View
        android:id="@+id/c2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/teal_200"
        app:layout_constraintTop_toBottomOf="@id/b1"
        app:layout_constraintLeft_toRightOf="@id/b1"/>
    <View
        android:id="@+id/c3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/teal_200"
        app:layout_constraintBottom_toTopOf="@id/b1"
        app:layout_constraintRight_toLeftOf="@id/b1"/>
    <View
        android:id="@+id/c4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/teal_200"
        app:layout_constraintBottom_toTopOf="@id/b1"
        app:layout_constraintLeft_toRightOf="@id/b1"/>

    <View
        android:id="@+id/p1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/purple_500"
        app:layout_constraintBottom_toTopOf="@id/c3"
        app:layout_constraintLeft_toRightOf="@id/c3"/>
    <View
        android:id="@+id/p2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/purple_500"
        app:layout_constraintTop_toBottomOf="@id/c1"
        app:layout_constraintLeft_toRightOf="@id/c3"/>
    <View
        android:id="@+id/p3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/purple_500"
        app:layout_constraintTop_toBottomOf="@id/c1"
        app:layout_constraintLeft_toRightOf="@id/c2"/>
    <View
        android:id="@+id/p4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/purple_500"
        app:layout_constraintTop_toBottomOf="@id/c1"
        app:layout_constraintRight_toLeftOf="@id/c3" />

</androidx.constraintlayout.widget.ConstraintLayout>